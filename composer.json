{
    "name": "tugboatqa/wordpress",
    "description": "Wordpress Demo",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Tugboatqa\\Wordpress\\": "src/"
        }
    },
    "authors": [
        {
            "name": "KeyboardCowboy",
            "email": "chris.albrecht@lullabot.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "roots/wordpress": "6.2.2"
    },
    "extra": {
        "wordpress-install-dir": "docroot"
    },
    "config": {
        "allow-plugins": {
            "roots/wordpress-core-installer": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "cd docroot; ln -sf ../wp-content .; ln -sf ../wp-config.php"
        ]
    }
}
